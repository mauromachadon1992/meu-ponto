# Ambiente
NODE_ENV=production

# Database
# Para PostgreSQL local, ajuste usuário, senha, host e porta conforme sua instalação
# Exemplo: DATABASE_URL="postgresql://usuario:senha@localhost:5432/meu_ponto?schema=public"
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/meu_ponto?schema=public"

# API
API_PORT=3000
API_URL="http://localhost:3000"

# JWT (para autenticação)
JWT_SECRET="seu-secret-muito-seguro-aqui-mude-em-producao"
JWT_EXPIRES_IN="7d"