{
  "name": "meu-ponto",
  "version": "1.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:prod": "ng build --configuration=production",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "server": "bun run server/index.ts",
    "server:dev": "bun --watch server/index.ts",
    "server:prod": "NODE_ENV=production bun run server/index.production.ts",
    "prisma:generate": "DATABASE_URL=\"postgresql://postgres:postgres@localhost:5432/meu_ponto?schema=public\" prisma generate",
    "prisma:migrate": "DATABASE_URL=\"postgresql://postgres:postgres@localhost:5432/meu_ponto?schema=public\" prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:seed": "DATABASE_URL=\"postgresql://postgres:postgres@localhost:5432/meu_ponto?schema=public\" bun run prisma/seed.ts",
    "prisma:studio": "DATABASE_URL=\"postgresql://postgres:postgres@localhost:5432/meu_ponto?schema=public\" prisma studio",
    "init:production": "bun run scripts/init-production.ts",
    "init:production:force": "bun run scripts/init-production.ts --force",
    "dev": "concurrently \"bun run start\" \"bun run server:dev\"",
    "docker:build": "docker build -t meu-ponto:latest .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:check": "./docker/check-deploy.sh",
    "docker:local": "./docker/build-local.sh",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:dev:down": "docker-compose -f docker-compose.dev.yml down",
    "lint": "echo 'Lint not configured yet'",
    "type-check": "tsc --noEmit"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/cdk": "^20.2.12",
    "@angular/common": "^20.3.10",
    "@angular/compiler": "^20.3.10",
    "@angular/core": "^20.3.10",
    "@angular/forms": "^20.3.10",
    "@angular/platform-browser": "^20.3.10",
    "@angular/router": "^20.3.10",
    "@elysiajs/cors": "^1.4.0",
    "@elysiajs/static": "^1.4.6",
    "@ng-icons/core": "^31.4.0",
    "@ng-icons/lucide": "^31.4.0",
    "@prisma/client": "^6.19.0",
    "@spartan-ng/brain": "^0.0.1-alpha.553",
    "@types/bun": "^1.3.2",
    "autoprefixer": "^10.4.21",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "elysia": "^1.4.15",
    "jspdf": "^3.0.3",
    "jspdf-autotable": "^5.0.2",
    "ngx-sonner": "^3.1.0",
    "postcss": "^8.5.6",
    "prismabox": "^1.1.25",
    "rxjs": "~7.8.2",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^3.4.18",
    "tslib": "^2.8.1",
    "zone.js": "~0.15.1"
  },
  "devDependencies": {
    "@angular/build": "^20.3.9",
    "@angular/cli": "^20.3.9",
    "@angular/compiler-cli": "^20.3.10",
    "@spartan-ng/cli": "^0.0.1-alpha.553",
    "@types/jasmine": "~5.1.12",
    "concurrently": "^9.2.1",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.4",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "prisma": "^6.19.0",
    "typescript": "~5.9.3"
  }
}
